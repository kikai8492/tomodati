<h3>以下の内容で投稿してもよろしいですか？</h3>
<%= form_with(model: @blog, local: true) do |form| %>
  <%= image_tag(@blog.image.url) if @blog.image && @blog.image.url %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image_cache%>
    <p>投稿内容:<%= @blog.content %></p>
    <p>投稿画像:<%= @blog.image %></p>
  <%= form.submit  "投稿する" %>
<%end%>

<%= form_with(model:@blog, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= link_to "戻る", :back%>
<% end %>